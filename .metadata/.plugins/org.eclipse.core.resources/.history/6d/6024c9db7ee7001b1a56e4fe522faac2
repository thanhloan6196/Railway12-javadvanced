package com.vti.railway12.controller;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.vti.railway12.entity.HocSinh;

@RestController
public class HocSinhController {
	
	private static final String template = "Hello, %s!";
	
	@GetMapping("/hocsinh")
	public HocSinh hocsinh(@RequestParam(value = "name", defaultValue = "World") String name) {
		return new HocSinh(1, String.format(template, name));
		
	}
}
